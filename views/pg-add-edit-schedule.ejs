<!DOCTYPE html>
<html>
<head>
    <% include ./meta-resources.ejs %>
</head>
<body>
<% include ./header.ejs %>

<form class="mk-addmovie-wrapper">
    <div>
        <span id="mk-add-movie-title"><%= schedule_option %> Movie Schedule</span>
    </div>

        <% scheduleFormFields.forEach(function(field) { %>
        <div class="form-group">
            <label for="<%= field %>"><%= field %></label>
            <input class="form-control form-control-sm input-sm col-sm-6"
                   placeholder="input <%= field.toLowerCase() %>"
                   type="text"
                   pattern="[a-z|A-Z|0-9|\s]*"
                    <% if (schedule_option === 'Add') { %>
                   required
                    <% } %>
            />
        </div>
        <% }); %>

        <div class="form-group">
            <label>FORMAT</label>
            <select class="form-control form-control-sm input-sm col-sm-4">
                <option value="iMax">iMax</option>
                <option value="3D">3D</option>
                <option value="Digital">Digital</option>
            </select>
        </div>

        <div class="form-group">
            <label>SCHEDULE DATE</label>
            <input class="form-control form-control-sm input-sm col-sm-5" type="date"
                    <% if (schedule_option === 'Add') { %>
                   required
                    <% } %>
            />
        </div>

        <div class="form-group">
            <label>TIME SLOT</label>
            <button class="w3-button w3-blue w3-tiny" id="mk-addmovie-addslot" onclick="addNode()">+</button>
            <div id="timeslot">
            <input class="form-control form-control-sm input-sm col-sm-4"
                   type="time"
                    <% if (schedule_option === 'Add') { %>
                   required
                    <% } %>
            />
            </div>
        </div>
        <div class="form-group">
            <a href=<%=PathDict.GET.MOVIE_LIST%>>
                <% if (schedule_option === 'Add') { %>
                    <% include ./add-button.ejs %>
                <% } else { %>
                    <% include ./update-button.ejs %>
                <% } %>
            </a>
        </div>
</form>

<% include ./lib-url.ejs %>
<script src="/scripts/add-movie.js"></script>
</body>
</html>
