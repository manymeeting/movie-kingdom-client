<!DOCTYPE html>
<html>
<head>
    <% include ./meta-resources.ejs %>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
<% include ./header.ejs %>

<form class="mk-addmovie-wrapper">
    <div>
        <span id="mk-add-movie-title"><%= movie_option %> Movie</span>
    </div>

    <div class="form-group">
        <label for="TITLE">TITLE</label>
        <input class="form-control form-control-sm input-sm col-sm-6"
               type="text"
               placeholder="input title"
               pattern="[a-z|A-Z|0-9|\s]*"
               title="must contain only letter, digit or space"
               <% if (movie_option === 'Add') { %>
                required
               <% } %>
        />
    </div>

    <div class="form-group">
        <label for="LENGTH">LENGTH</label>
        <input class="form-control form-control-sm input-sm col-sm-6"
               type="text"
               pattern="[0-9]+"
               title="must only contain digits"
               placeholder="input length in minutes"
                <% if (movie_option === 'Add') { %>
               required
                <% } %>
        />
    </div>

    <div class="form-group">
        <label for="COVER IMAGE URL">COVER IMAGE URL</label>
        <input class="form-control form-control-sm input-sm col-sm-6"
               type="url"
               pattern="(http:\/\/www.omdbapi.com)"
               title="must have url prefix 'http://www.omdbapi.com'"
               placeholder="input image url"
                <% if (movie_option === 'Add') { %>
               required
                <% } %>
        />
    </div>

    <div class="form-group">
        <label for="TRAILER">TRAILER URL</label>
        <input class="form-control form-control-sm input-sm col-sm-6"
               type="url"
               pattern="(https:\/\/youtu.be\/)"
               title="must have url prefix 'https://youtu.be/'"
               placeholder="input trailer url"
                <% if (movie_option === 'Add') { %>
               required
                <% } %>
        />
    </div>

    <div class="form-group">
        <label>MPAA ID</label>
        <select class="form-control form-control-sm input-sm col-sm-4">
            <option value="0">G</option>
            <option value="1">PG</option>
            <option value="2">PG-13</option>
            <option value="3">R</option>
            <option value="4">NC-17</option>
        </select>
    </div>

    <div class="form-group">
        <label>RELEASE DATE</label>
        <input class="form-control form-control-sm input-sm col-sm-5" type="date"/>
    </div>

    <div class="form-group">
        <a href=<%=PathDict.GET.MOVIE_LIST%>>
            <% if (movie_option === 'Add') { %>
                <% include ./add-button.ejs %>
            <% } else { %>
                <% include ./update-button.ejs %>
            <% } %>
        </a>
    </div>
</form>

<% include ./lib-url.ejs %>
<script src="/scripts/add-movie.js"></script>
</body>
</html>
