<form class="mk-profile-edit-form" action="/profile/edit" method="POST">
    <% if (userInfo.role === Roles.SAD) { %>
        <div class="form-group mk-form-adjust">
            <label>Role</label>
            <select class="form-control form-control-sm input-sm col-sm-6" name="role">
                <option value=0>GUEST</option>
                <option value=1>USER</option>
                <option value=2>HAD</option>
                <option value=3>SAD</option>
            </select>
        </div>
    <% } %>
    <div class="form-group card">
        <img src="http://www.dreams.metroeve.com/wp-content/uploads/2017/06/Head-dreams-meaning.jpg"
             alt="profile image"
             class="mk-profile-img"
             id="mk-image-preview"/>
        <label class="mk-profile-label">
            <input type="file" id="mk-image-upload"/>
            <input type="hidden" name="userInfo" value="<%= JSON.stringify(userInfo)%>"/>
            Select Image
        </label>
    </div>
    <div class="form-group">
        <label>Image URL</label>
        <input type="text"
               class="form-control form-control-sm input-sm"
               id="mk-image-url"
               name="imageUrl"/>
    </div>
    <div class="form-group">
        <label>First Name</label>
        <input type="text"
               class="form-control form-control-sm input-sm"
               pattern="^([^0-9]*)$"
               title="Must not contain number"
               placeholder="Edit"
               name="firstName"
        />
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input type="text"
               class="form-control form-control-sm input-sm"
               pattern="^([^0-9]*)$"
               title="Must not contain number"
               placeholder="Edit"
               name="lastName"
        />
    </div>
    <div class="form-group">
        <label>Street</label>
        <input type="text"
               class="form-control form-control-sm input-sm"
               placeholder="your new address"
               name="street"
        />
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="text"
               class="form-control form-control-sm input-sm"
               pattern="^([^0-9]*)$"
               title="Must not contain number"
               placeholder="city name"
               name="city"
        />
    </div>
    <div class="form-group">
        <label>State</label>
        <input type="text"
               class="form-control form-control-sm input-sm"
               pattern="[A-Z]{2}"
               title="Must not contain exactly 2 uppercase letters"
               placeholder="XX"
               name="state"
        />
    </div>
    <div class="form-group">
        <label>Zip Code</label>
        <input type="text"
               class="form-control form-control-sm input-sm"
               pattern="[0-9]{5}"
               title="Must input exactly 5 digits zip code"
               placeholder="xxxxx"
               name="zipcode"
        />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input type="tel"
               class="form-control form-control-sm input-sm"
               pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
               title="Must input phone number as pattern xxx-xxx-xxxx"
               placeholder="xxx-xxx-xxxx"
               name="phone"
        />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email"
               class="form-control form-control-sm input-sm" placeholder="xx@xxx.xxx"
               pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$"
               name="email"
        />
    </div>
    <div class="form-group mk-theme-nested-border">
        <div>
        <label>Credit Card Details</label>
        </div>
        <label>Card Number</label>
        <input type="text" class="form-control form-control-sm input-sm"
               pattern="[0-9]{4} [0-9]{4} [0-9]{4} [0-9]{4}"
               title="must have xxxx xxxx xxxx xxxx"
               placeholder="xxxx xxxx xxxx xxxx"
               name="cardNum"
        />
        <label>Expire Date</label>
        <input type="date" class="form-control form-control-sm input-sm"
               title="must have MM/DD/YYYY"
               pattern="(0[1-9]|1[012])[- /.](0[1-9]|[12][0-9]|3[01])[- /.](19|20)\d\d"
               name="cardExpire"
        />
        <label>Security Code</label>
        <input type="text" class="form-control form-control-sm input-sm"
               pattern="[0-9]{3}"
               title="must have 3 digits security code"
               placeholder="xxx"
               name="cardCvv"
        />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-sm">Change</button>
        <a href=<% PathDict.GET.PROFILE%>>
            <button type="button" class="btn btn-primary btn-sm">Cancel</button>
        </a>
    </div>
    <script src="/scripts/profile-edit.js"></script>
</form>